<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_insertarp"
        android:layout_width="226dp"
        android:layout_height="54dp"
        android:layout_marginTop="68dp"
        android:onClick="nuevaProvincia"
        android:text="@string/nueva_provincia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_borrarp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/borrar_provincia"
        android:onClick="borrarProvincia"
        app:layout_constraintEnd_toEndOf="@+id/bt_insertarp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_insertarp"
        app:layout_constraintTop_toBottomOf="@+id/bt_insertarp" />

    <Button
        android:id="@+id/bt_actualizarp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="actualizarprovincia"
        android:text="@string/actualizar_provincia"
        app:layout_constraintEnd_toEndOf="@+id/bt_borrarp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_borrarp"
        app:layout_constraintTop_toBottomOf="@+id/bt_borrarp" />

    <Button
        android:id="@+id/bt_mostrar_ciudades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:onClick="mostrarCiudades"
        android:text="@string/mostrar_ciudades"
        app:layout_constraintEnd_toEndOf="@+id/bt_actualizarp"
        app:layout_constraintStart_toStartOf="@+id/bt_actualizarp"
        app:layout_constraintTop_toBottomOf="@+id/bt_actualizarp" />
</androidx.constraintlayout.widget.ConstraintLayout>